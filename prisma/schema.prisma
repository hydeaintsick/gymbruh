// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  username       String        @unique
  email          String        @unique
  password       String
  gender         String        // "male", "female", "other"
  height         Float         // en cm
  weight         Float         // poids initial en kg
  birthDate      DateTime
  profilePublic  Boolean       @default(false) // page /gg/username visible ou non
  prExerciseIds  String[]      // max 3 exercices pour afficher les PR sur la page publique
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  accounts       Account[]
  sessions       NextAuthSession[]
  workoutSessions WorkoutSession[]
  weightEntries  WeightEntry[]

  @@map("users")
}

model Exercise {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  name        String          @unique // Nom principal (anglais)
  nameEn      String?         // English
  nameFr      String?         // Français
  nameIt      String?         // Italiano
  nameEs      String?         // Español
  nameNl      String?         // Nederlands
  description String?
  muscleGroups String[]       // ["chest", "back", "legs", etc.]
  createdAt   DateTime        @default(now())
  
  sets        Set[]
  
  @@map("exercises")
}

model WorkoutSession {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  userId      String          @db.ObjectId
  name        String          @default("Workout")
  date        DateTime        @default(now())
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  sets        Set[]
  
  @@map("workout_sessions")
  @@index([userId])
  @@index([date])
}

model Set {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  sessionId   String          @db.ObjectId
  exerciseId  String          @db.ObjectId
  reps        Int
  weight      Float           // en kg
  order       Int             // ordre dans la séance
  createdAt   DateTime        @default(now())
  
  session     WorkoutSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  exercise    Exercise        @relation(fields: [exerciseId], references: [id])
  
  @@map("sets")
  @@index([sessionId])
  @@index([exerciseId])
}

model WeightEntry {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  userId      String          @db.ObjectId
  weight      Float           // en kg
  date        DateTime        @default(now())
  createdAt   DateTime        @default(now())
  
  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("weight_entries")
  @@index([userId])
  @@index([date])
}

// NextAuth models
model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
  @@index([userId])
}

model NextAuthSession {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
  @@index([userId])
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
